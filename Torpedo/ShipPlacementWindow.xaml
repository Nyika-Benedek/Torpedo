<Window x:Class="Torpedo.ShipPlacementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torpedo"
        mc:Ignorable="d"
        Title="ShipPlacementWindow"
        Width="200"
        Height="150">
    <StackPanel Margin="10">
        <Label>Give the positioning of ship 2</Label>
        <RadioButton Name="Horizontal" IsChecked="True">Horizontal</RadioButton>
        <RadioButton Name="Vertical">Vertical</RadioButton>
        <Button Name="Send" Content="Submit" Click="GivePosition"/>
    </StackPanel>
</Window>
